@{
}

@model ProductDto
@Html.ValidationSummary(false)
<form asp-action="Edit" asp-controller="Product" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Ürün Adı</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Ürün Kategorisi</label>
        <div class="col-sm-10">
            <select class="form-control dropdown" asp-for="CategoryId" asp-items="ViewBag.Category">
                <option disabled selected value="">Kategori Seçiniz</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Ürün Açıklama</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Description">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Ürün Resmi</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" asp-for="File" accept="image/*">
        </div>
    </div>
    <img src="@Model.FileBase64String" style="width:200px;height:200px" />

    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
