@using ShoppingApp.Models.Dtos
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "";
}

@model UserDto
@Html.ValidationSummary(false)
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingApp.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid">


        <form asp-action="Register" asp-controller="Account">
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Adınız</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Name">
                    @*@(Html.ValidationMessageFor(p => p.Name))*@
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Soyadınız</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Surname">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Şifre</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Şifre Tekrar</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="PasswordConfirmation">

                </div>
            </div>

            <button class="btn btn-primary" type="submit">Kaydet</button>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
