@{
}

@model List<UserListDto>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Liste Adı</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            int row = 0;
        }
        @foreach (var item in Model)
        {
            row++;
            <tr>
                <td>@row</td>
                <td><a href="/UserList/UserListDetail/@item.Id">@item.Name</a></td>
                <td><a href="/UserList/DeleteUserList/@item.Id">Sil</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/UserList/Add" class="btn btn-info">Liste Ekle</a>