@{
}
@model ProductUserList

<form asp-action="ProductListEdit" asp-controller="UserList">
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Ürün Adı</label>
        <div class="col-sm-10">
            <input type="text" disabled class="form-control" asp-for="Product.Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Açıklama</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Ürün Resmi</label>
        <div class="col-sm-10">
            <img src="@String.Format("data:{0};base64,{1}", Model.Product.ContentType,Model.Product.FileBase64String.ToString())" style="width:200px;height:200px">
        </div>
    </div>
    <input hidden asp-for="Id" />
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
